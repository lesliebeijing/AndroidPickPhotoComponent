<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/takephoto_popup_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#807f7f7f" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_above="@+id/cancel_photo"
        android:layout_margin="20dp"
        android:background="@drawable/select_photo_button_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/take_photo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="拍照"
            android:textColor="#000000"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#493734" />

        <TextView
            android:id="@+id/select_from_album"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="从相册选择"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/cancel_photo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/select_photo_button_bg"
        android:gravity="center"
        android:text="取消"
        android:textColor="#000000"
        android:textSize="16sp" />

</RelativeLayout>